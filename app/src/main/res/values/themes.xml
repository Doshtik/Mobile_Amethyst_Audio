<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mobile_Amethyst_Audio" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <!-- Фон и поверхность -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- Статус бар -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Стиль для кнопок -->
        <item name="materialButtonStyle">@style/Widget.MobileAmethystAudio.Button</item>

        <!-- Стиль для EditText -->
        <item name="editTextStyle">@style/Widget.MobileAmethystAudio.EditText</item>
    </style>

    <!-- Стиль для EditText с border -->
    <style name="Widget.MobileAmethystAudio.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edittext_border</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/purple_200</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!-- Стиль для кнопок со скруглением -->
    <style name="Widget.MobileAmethystAudio.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Theme.Mobile_Amethyst_Audio" parent="Base.Theme.Mobile_Amethyst_Audio" />
</resources>